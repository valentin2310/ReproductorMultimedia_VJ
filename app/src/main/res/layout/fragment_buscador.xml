<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".Fragments.BuscadorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="5dp">

            <TextView
                android:id="@+id/busq_txt_seleccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todas las Canciones"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:textSize="15dp"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/busq_btn_busq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toStartOf="@id/busq_more_opc"
                app:tint="@color/white"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/lupa_off"/>
            <ImageButton
                android:id="@+id/busq_more_opc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                app:tint="@color/white"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_baseline_more_vert_24"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/busq_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="formInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- linea inferior -->
        <item name="boxStrokeColor">@color/base_claro</item>
        <!-- color relleno -->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <!-- el hint cuando el campo está vacio y sin foco -->
        <item name="android:textColorHint">@color/base_claro</item>
        <!-- el hint cuando se convierte en etiqueta flotante -->
        <item name="hintTextColor">@color/base_claro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buscador" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- linea inferior -->
        <item name="boxStrokeColor">@android:color/holo_blue_light</item>
        <!-- color relleno -->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <!-- el hint cuando el campo está vacio y sin foco -->
        <item name="android:textColorHint">@color/black</item>
        <!-- el hint cuando se convierte en etiqueta flotante -->
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
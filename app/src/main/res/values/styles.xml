<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="formInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- linea inferior -->
        <item name="boxStrokeColor">@color/text_light</item>
        <!-- color relleno -->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <!-- el hint cuando el campo está vacio y sin foco -->
        <item name="android:textColorHint">@color/white</item>
        <!-- el hint cuando se convierte en etiqueta flotante -->
        <item name="hintTextColor">@color/text_light</item>
        <item name="iconTint">@color/text_light</item>
        <item name="startIconTint">@color/text_light</item>
        <item name="endIconTint">@color/text_light</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
    </style>



    <style name="buscador" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- linea inferior -->
        <item name="boxStrokeColor">@android:color/holo_blue_light</item>
        <!-- color relleno -->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <!-- el hint cuando el campo está vacio y sin foco -->
        <item name="android:textColorHint">@color/black</item>
        <!-- el hint cuando se convierte en etiqueta flotante -->
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="btn_form">
        <item name="android:padding">15dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/text_dark</item>
        <item name="android:shadowColor">@color/oscuro</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>